# HTTP 服务监听地址，如 :8080 / 0.0.0.0:8080
HTTP_ADDR=:8080

# MySQL DSN（user:pass@tcp(host:port)/db?parseTime=true&charset=utf8mb4）
MYSQL_DSN=root:password@tcp(127.0.0.1:3306)/NianHui?parseTime=true&charset=utf8mb4

# Redis 地址与认证
REDIS_ADDR=127.0.0.1:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 签名密钥（用户/管理员 token）
JWT_SECRET=change-me

# 管理员直连 Token（用于 X-Admin-Token 头）
ADMIN_TOKEN=admin-secret

# 管理员登录密码（/api/admin/login）
ADMIN_PASSWORD=admin-password

# 管理员手机号白名单（逗号分隔，短信登录后自动标记管理员）
ADMIN_PHONES=13800000000

# 点击签名密钥（留空则不校验签名）
GAME_SIGN_SECRET=

# 初始化重置密钥（/api/admin/init/reset）
INIT_SECRET=

# Submail 短信服务配置
SUBMAIL_APPID=your_app_id
SUBMAIL_APPKEY=your_app_key
SUBMAIL_PROJECT=your_project_id

# 点击窗口与时间校验（单位：毫秒）
CLICK_WINDOW_MS=1200
# 允许客户端时间偏移/迟到的宽限（毫秒）
CLICK_GRACE_MS=2400
# 最低速度倍数，影响有效点击窗口
MIN_SPEED_MULT=0.2
# 客户端与服务端时间允许偏差（毫秒）
TIME_SKEW_MS=400

# 前端背景音乐资源（可用完整 URL、协议相对 // 或仅域名/路径）
INTRO_BGM_URL=
GAME_BGM_URL=

# 支付宝配置（证书模式）
ALIPAY_ENV=prod
ALIPAY_APP_ID=
# 可填写私钥内容 / base64 / 或私钥文件路径
ALIPAY_PRIVATE_KEY=
ALIPAY_APP_CERT_PATH=
ALIPAY_ALIPAY_CERT_PATH=
ALIPAY_ROOT_CERT_PATH=
ALIPAY_IDENTITY_TYPE=ALIPAY_LOGON_ID
ALIPAY_BIZ_SCENE=DIRECT_TRANSFER
ALIPAY_PRODUCT_CODE=TRANS_ACCOUNT_NO_PWD
ALIPAY_ORDER_TITLE=红包雨提现
ALIPAY_REMARK=红包雨提现
ALIPAY_TRANSFER_SCENE_NAME=
# JSON 数组字符串，如 [{"info_type":"业务场景","info_content":"年会红包提现"}]
ALIPAY_TRANSFER_SCENE_REPORT_INFOS=[{"info_type": "活动名称", "info_content": "年会红包"},{"info_type": "奖励说明","info_content": "红包提现"}]
# 余额查询账号（用于自动提现前的余额判断）
ALIPAY_BALANCE_USER_ID=
ALIPAY_BALANCE_ACCOUNT_TYPE=

# 提现控制（单位：分）
# 0 表示不限制金额，默认全部走自动提现（需支付宝配置）
WITHDRAW_AUTO_MAX_FEN=0
# 是否在主服务进程内启动提现 worker
WITHDRAW_WORKER_ENABLED=false
# 全局提现开关
WITHDRAW_ENABLED=true

# 远程注册接口密钥（/api/remote/register）
REMOTE_API_KEY=change-me


# 游戏默认BGM
INTRO_BGM_URL=
# 游戏中的BGM
GAME_BGM_URL=